<div class="grid-x grid-margin-x">
  <div class="cell large-7">
    <h2>Personal Details</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :first_name %>
        <%= f.text_field :first_name, autofocus: true %>
      </div>

      <div class="field">
        <%= f.label :last_name %>
        <%= f.text_field :last_name %>
      </div>

      <div class="field">
        <%= f.label :email %>
        <%= f.email_field :email, autocomplete: "email" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="actions">
        <%= f.submit "Update", class: 'button' %>
      </div>
    <% end %>
  </div>
  <div class="cell large-5">
    <h2>Change Password</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :password %>
        <%= f.password_field :password, autocomplete: "new-password", aria: {describedby: 'passwordHelpText'} %>
        <% if @minimum_password_length %>
          <p class="help-text" id="passwordHelpText"><%= @minimum_password_length %> characters minimum</p>
        <% end %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="field">
        <%= f.label :current_password %>
        <%= f.password_field :current_password, autocomplete: "current-password", aria: {describedby: 'currentPasswordHelpText'} %>
        <p class="help-text" id="currentPasswordHelpText">We need your current password to confirm your changes</p>
      </div>

      <div class="actions">
        <%= f.submit "Change Password", class: 'button' %>
      </div>
    <% end %>
  </div>
</div>



<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: 'button' %></p>

<%= link_to "Back", :back %>
