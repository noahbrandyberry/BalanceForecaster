<div class="grid-x align-center">
  <div class="cell large-10">
    <div class="grid-x">
      <div class="cell auto">
        <h1>Accounts</h1>
      </div>
      <div class="cell shrink">
        <%= link_to 'New Account', new_account_path, class: 'button' %>
      </div>
    </div>
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Starting Balance</th>
          <th>Today's Balance</th>
          <th style="width: 280px;">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @accounts.each do |account| %>
          <tr>
            <td><%= account.name %></td>
            <td><%= number_to_currency(account.balance) %></td>
            <td><%= number_to_currency(account.balance_on) %></td>
            <td>
              <%= link_to '<i class="fas fa-chart-line"></i>'.html_safe, account_chart_path(account), class: 'button secondary hollow no-margin tooltip', title: 'View Charts' %>
              <%= link_to '<i class="fas fa-cloud-sun"></i>'.html_safe, account_forecast_path(account), class: 'button secondary no-margin tooltip', title: 'View Forecast' %>
              <%= link_to '<i class="fas fa-list"></i>'.html_safe, account_items_path(account), class: 'button primary no-margin tooltip', title: 'View Transactions' %>
              <%= link_to '<i class="fas fa-edit"></i>'.html_safe, edit_account_path(account), class: 'button hollow no-margin tooltip', title: 'Edit Account' %>
              <%= link_to '<i class="fas fa-trash"></i>'.html_safe, account_path(account), method: :delete, data: { confirm: "Are you sure you want to delete this account?" }, class: 'button alert no-margin tooltip', title: 'Delete Account' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
